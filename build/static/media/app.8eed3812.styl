    font-size 1.25rem
    text-align center
    text-shadow none
    line-height 25px

.panier-list
    color #fff
    font-weight 300

.panier-header, .panier-total
    color #fff
    font-weight 700

.panier-total
    font-size 1.5rem

.table
    background-color #2b070a

.fas
    cursor pointer

