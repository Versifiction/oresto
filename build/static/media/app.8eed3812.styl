a,
a:hover
    text-decoration none

a
    color #ffc0cb

body
    font-family 'Montserrat'
    font-weight bold
    background-color #0C0203

.fixed-top
    background-color rgba(255,0,0,0)
    transition 0.5s

.navbar
    ul
        li
            margin-left 1.5rem
    a
        text-decoration none
        color #fff
        text-transform uppercase
        transition 0.3s
        text-shadow 1px 3px 4px #000
        &:hover
            text-decoration none
            color #ffc0cb

.navbar-nav 
    margin-right 1rem

.fa-shopping-cart
    font-size 1.5rem
    padding 0.5rem
    border 1px solid #ffc0cb
    border-radius 3px
    margin-right 0
    color #C4A8AC
    position relative

.logo
    width 55px
    cursor pointer
    -webkit-animation spin 4s linear alternate
    -moz-animation spin 4s linear alternate
    animation spin 4s linear alternate

@-moz-keyframes spin { 100% { -moz-transform: rotate(360deg); } }
@-webkit-keyframes spin { 100% { -webkit-transform: rotate(360deg); } }
@keyframes spin { 100% { -webkit-transform: rotate(360deg); transform:rotate(360deg); } }

.banner
	position relative
	height 100vh
	background-image url("../../images/interior-restaurant.jpeg")
	background-size cover
	background-repeat no-repeat
	background-position center bottom

.title-container
    padding-top 40vh

.btn
    border-radius 0
    background-color #BC001C
    border none
    display block
    margin 0 auto
    padding 0.5rem
    &:hover
        background-color #BC001C

.banner
    p
        a
            &:hover
                color #EDD5D8

h1
    text-transform uppercase
    color #EDD5D8
    text-align center
    font-size 6.5rem
    font-weight bold
    text-shadow 1px 3px 4px #000

.fa-angle-down
    display block
    width 100%
    text-align center
    font-size 5rem
    margin-top 20rem
    animation-name arrow-animation
    animation-duration 1s
    animation-timing-function ease-in-out
    animation-delay 2s
    animation-iteration-count infinite
    animation-direction alternate
    animation-play-state running
    &:hover
        cursor pointer
        color #EDD5D8

.fa-home
    width 15px

.fa-home,
.fa-elementor,
.fa-user-plus,
.fa-sign-in-alt
    margin-right 1rem
    color #ffc0cb

.footer
    padding-top 10rem
    padding-bottom 10rem
    background-color #0C0203
    ul
        background-color #0C0203
        a
            width 15rem
            background-color #0C0203
            color #C4A8AC

.logo-footer
    width 12rem
    height 12rem
    margin-bottom 1.05rem

.presentation
    padding-top 5rem
    padding-bottom 5rem
    color #fff
    font-weight 300
    font-size 1.2rem
    background-color #0C0203

.presentation-image
    margin-top 2rem
    width 300px
    height 250px

.presentation-btn
    top 75%
    left 41.5%

.home-delivery
    height 350px
    background-image url("../../images/motorcycle.jpg")
    background-size cover
    background-repeat no-repeat
    background-position center
    p
        text-shadow 1px 3px 4px #000
        line-height 350px
        color #fff
        font-size 1.5rem

.formulaire
    margin-top 15rem
    width 600px
    margin 0 auto

label
    color #fff

h2
    color #fff

.cartes,
.panier
    margin-top 15rem

.card
    width 30%
    margin-bottom 1.5rem
    margin-left 1.15%
    margin-right 1.15%
    display inline-block !important

.card img 
    height 200px

.price
    font-size 0.75rem
    font-weight bold
    color #bc001c

.countPanier
